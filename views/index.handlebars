<div class="grid-y grid-frame">
    <header class="cell shrink header">
        <h1 id="logo">Time Zone Traveler</h1>
        <h2 class="big-text cell">Let's Explore</h2>
    </header>


    <main class="cell small-8 medium-8 large-7">
        <div class="grid-y grid-frame">
            <div class="grid-x">
                <h3 class="cell small-5">Food</h3>
                <label class="switch cell small-2">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
                <h3 class="cell small-5">Entertainment</h3>
            </div>
            <section class="cell small-4 medium-4 large-10" id="map">Map</section>
            <div class="toggle cell small-6 medium-8 large-2">
                <div class="grid-x">
                    <div id="addLocation" class="btn cell small-6">Add Food Location</div>
                    <div id="refresh" class="btn cell small-6">Refresh</div>
                </div>
            </div>
        </div>
    </main>

    <footer class="cell shrink footer">
        <h3>Designed and built by: Zak Monnet, Teshera Lee, Chad Tarpey</h3>
        <h3>&#169, 2020</h3>
    </footer>
</div>

