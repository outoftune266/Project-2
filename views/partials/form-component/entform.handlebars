<div class="grid-y grid-frame">
    <header class="cell shrink header">
        <h1>Entertainment Spots</h1>
        <h3>All fields must be filled in to add a new location</h3>
    </header>
    
    <main class="cell">
        <div class="grid-y grid-frame">
            <form class="form-input cell">
                <div class="grid-x">
                    <div class="cell large-8 large-offset-3">
                        <input id="name" type="text" placeholder="Entertainment Name">
                        <input id="cuisine" type="text" placeholder="Venue">
                        <input id="coord" type="text" placeholder="Address">
                        <select id="cost" placeholder="Cost">
                            <option disabled="disabled" selected="selected">Cost</option>
                            <option value="$">$</option>
                            <option value="$$">$$</option>
                            <option value="$$$">$$$</option>
                            <option value="$$$$">$$$$</option>
                        </select>
                        <input id="url" type="text" placeholder="Website URL: Leave empty if none">
                        <input id="rating" type="number" min="1" max="10" placeholder="Rating">
                        <legend>Family Friendly? Check for "yes":   <input id="family" type="checkbox"></legend>
                        <input id="try" type="text" placeholder="Best option">
                    </div>
                </div>
                <div class="grid-x">
                    <button class="submit cell small-3 large-offset-3">Submit</button>
                    <button class="submit home cell small-3">Go Back To Home</button>
                </div>

            </form>
        </div>
    </main>

    <footer class="cell shrink footer">
        <h3>Designed and built by: Zak Monnet, Teshera Lee, Chad Tarpey</h3>
        <h3>&#169, 2020</h3>
    </footer>
</div>

